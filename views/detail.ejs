<div class="row">
  <div class="col-md-8">
    <h2>Detail Kontak : </h2>
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <% if (contact) { %>
          <h5 class="card-title"><%= contact.nama %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary"><%= contact.noHP %></h6>
          <% if (contact.email) { %>
              <p class="card-text"><%= contact.email %></p>
              <a href="/contact/edit/<%= contact.nama %>" class="btn btn-info badge">Ubah</a>
              <a href="/contact/delete/<%= contact.nama %>" class="btn btn-danger badge" onclick="return confirm('Yakin hapus?')">Hapus</a>
          <% } %>
          <% } else { %>
            <h5 class="text-danger">Kontak Tidak Ditemukan.</h5>
          <% } %>
          <a href="/contact" class="card-link d-block mt-3">&laquo; Kembali Daftar Kontak</a>
      </div>
    </div>
  </div>
</div>